<%- include('header') %>

<h4 class="mb-3">Új adat felvétele</h4>

<%- include('message') %>

<form action="/items/newtargyak" method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" name="title" placeholder="Cím">
        <label for="title">Cím</label>
    </div>

    <label for="type">Tárgy típusa:</label>
    <div class="btn-group m-2"> 
        <select class="form-select" name="type" id="type" aria-label="Default select example">
            <option value="könyv">Könyv</option>
            <option value="film">Film</option>
        </select>
    </div>


    <label for="available">Elérhető-e:</label>
    <div class="btn-group m-2">  
        <select class="form-select" name="available" id="available" aria-label="Default select example">
            <option value="1">Igen</option>
            <option value="0">Nem</option>
        </select>
    </div>

    <input class="btn btn-primary" type="submit" value="Felvétel" name="felveszBtn">
</form>

<%- include('footer') %>
